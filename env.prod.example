NODE_ENV=production
TENANT_ID=t1

DB_USER=knowra
DB_PASSWORD=change_me_to_secure_password_123456
DB_NAME=knowra

API_PORT=3001
WEB_PORT=3000

# Web (Next.js) -> API (NestJS)
# 浏览器端使用 NEXT_PUBLIC_API_BASE_URL；Next.js 服务端（route handlers）建议用 API_BASE_URL
NEXT_PUBLIC_API_BASE_URL=/api
API_BASE_URL=http://api:3001

# internal service RPC token (apps/knowra-ai -> apps/api)
INTERNAL_SERVICE_TOKEN=change_me_internal_service_token

# SMTP（用于发送邮箱验证码）
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

VOLCENGINE_API_KEY=
VOLC_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
VOLC_CHAT_MODEL=
VOLC_EMBED_MODEL=

# knowra-ai prompt config
KNOWRA_AI_SYSTEM_PROMPT=
KNOWRA_AI_CONTEXT_WINDOW_SIZE=50

RAG_VECTOR_DIM=2560
RAG_TOP_K=8
RAG_SIMILARITY_THRESHOLD=0.35
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=120

# knowra-ai attachments
KNOWRA_AI_ATTACHMENT_MAX_FILE_SIZE_BYTES=10485760
KNOWRA_AI_ATTACHMENT_MAX_FILES=5
RAG_ATTACHMENT_TOP_K=8
RAG_ATTACHMENT_SIMILARITY_THRESHOLD=0.35
