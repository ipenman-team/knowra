    "prisma:studio:local": "dotenv -e ../../.env -o -- prisma studio"
  },
  "dependencies": {
    "@contexta/application": "workspace:*",
    "@contexta/domain": "workspace:*",
    "@contexta/rag": "workspace:*",
    "@contexta/shared": "workspace:*",
    "@prisma/client": "^6.2.1"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "prisma": "^6.2.1"
  }
}
