generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PageVersionStatus {
  DRAFT
  TEMP
  PUBLISHED
}

enum TaskStatus {
  PENDING
  RUNNING
  SUCCEEDED
  FAILED
  CANCELLED
}

enum TaskType {
  IMPORT
  EXPORT
  RAG_INDEX
}

enum TenantType {
  PERSONAL
  ORG
}

enum TenantRole {
  OWNER
  ADMIN
  MEMBER
}

enum SpaceType {
  PERSONAL
  ORG
}

enum SpaceMemberRole {
  OWNER
  ADMIN
  MEMBER
}

enum SpaceRoleBuiltInType {
  OWNER
  ADMIN
  MEMBER
}

enum SpaceInvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REVOKED
}

enum SpaceInvitationChannel {
  EMAIL
  LINK
}

enum AiMessageRole {
  SYSTEM
  USER
  ASSISTANT
}

enum DailyCopyCategory {
  CLASSIC
  POETRY
  CELEBRITY
  PHILOSOPHY
  POSITIVE
  WARM
  AESTHETIC
}

enum ShareType {
  PAGE
  SPACE
  AI_CONVERSATION
  CUSTOM
}

enum ShareStatus {
  ACTIVE
  REVOKED
  EXPIRED
}

enum ShareVisibility {
  PUBLIC
  RESTRICTED
}

enum ShareScopeType {
  TENANT
  SPACE
}

enum CommentSource {
  INTERNAL
  EXTERNAL
}

enum CommentThreadStatus {
  OPEN
  RESOLVED
  ARCHIVED
}

enum CommentAuthorType {
  MEMBER
  COLLABORATOR
  REGISTERED_EXTERNAL
  GUEST_EXTERNAL
}

enum CommentModerationStatus {
  PASS
  REVIEW
  REJECT
}

enum NotificationType {
  SYSTEM
  MENTION
  COMMENT_REPLY
  TASK_DONE
  AI_DONE
  CUSTOM
}

enum BillingChannel {
  ALIPAY
  WECHAT_PAY
}

enum BillingClientType {
  WEB_PC
  WEB_MOBILE_BROWSER
  WECHAT_IN_APP_BROWSER
  ALIPAY_IN_APP_BROWSER
  APP_WEBVIEW
}

enum BillingOrderStatus {
  CREATED
  PAYING
  PAID
  EXPIRED
  CANCELLED
  REFUNDED
}

enum BillingPaymentStatus {
  INITIATED
  PENDING
  SUCCESS
  CLOSED
  FAILED
}

enum BillingBillStatus {
  ISSUED
  VOID
  REFUNDED
}

enum BillingWebhookVerifyStatus {
  PASS
  FAIL
}

enum TenantSubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELLED
  EXPIRED
}

enum EntitlementSourceType {
  SUBSCRIPTION
  ONE_TIME_PURCHASE
  MANUAL
}

model RagChunk {
  id       String @id
  tenantId String @map("tenant_id")

  pageId        String @map("page_id")
  pageVersionId String? @map("page_version_id")

  chunkIndex Int    @map("chunk_index")
  content    String
  embedding  Unsupported("vector(2560)")
  metadata   Json?  @db.JsonB

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([tenantId])
  @@index([tenantId, pageId])
  @@index([tenantId, pageVersionId])
  @@map("rag_chunks")
}

model Page {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  spaceId  String @map("space_id")

  title   String
  content Json   @db.JsonB

  parentIds String[] @default([]) @map("parent_ids")

  latestPublishedVersionId String? @unique @map("latest_published_version_id")
  latestPublishedVersion   PageVersion? @relation("LatestPublishedVersion", fields: [latestPublishedVersionId], references: [id], onDelete: SetNull)

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  versions PageVersion[] @relation("PageVersions")

  @@index([id])
  @@index([tenantId, spaceId])
  @@index([tenantId, spaceId, isDeleted])
  @@map("pages")
}

model PageVersion {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  spaceId  String @map("space_id")
  pageId   String @map("page_id")

  status PageVersionStatus

  title     String
  content   Json   @db.JsonB
  parentIds String[] @default([]) @map("parent_ids")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  page Page @relation("PageVersions", fields: [pageId], references: [id], onDelete: Cascade)

  /// 反向关联：被 Page.latestPublishedVersion 指向的版本
  latestPublishedFor Page? @relation("LatestPublishedVersion")

  @@index([id])
  @@index([tenantId, spaceId])
  @@index([pageId])
  @@index([pageId, createdAt])
  @@index([pageId, status])
  @@map("page_versions")
}

model Task {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")

  type   TaskType
  status TaskStatus @default(PENDING)

  progress Int @default(0)
  message  String?

  payload Json? @db.JsonB
  result  Json? @db.JsonB
  error   String?

  cancelRequestedAt DateTime? @map("cancel_requested_at")
  startedAt         DateTime? @map("started_at")
  finishedAt        DateTime? @map("finished_at")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([tenantId])
  @@index([tenantId, type])
  @@index([tenantId, status])
  @@map("tasks")
}

model Activity {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")

  action      String
  subjectType String @map("subject_type")
  subjectId   String @map("subject_id")
  actorUserId String @map("actor_user_id")

  occurredAt DateTime @default(now()) @map("occurred_at")
  traceId    String?  @map("trace_id")
  ip         String?
  userAgent  String?  @map("user_agent")
  metadata   Json?    @db.JsonB

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([tenantId, isDeleted, createdAt], map: "act_tenant_del_created_idx")
  @@index([tenantId, actorUserId, isDeleted, createdAt], map: "act_tenant_actor_del_created_idx")
  @@index([tenantId, subjectType, subjectId, isDeleted, createdAt], map: "act_tenant_subject_del_created_idx")
  @@index([tenantId, action, isDeleted, createdAt], map: "act_tenant_action_del_created_idx")
  @@map("activities")
}

model DailyCopy {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  userId   String @map("user_id")

  /// local date key, "YYYY-MM-DD"
  day      String @map("day")
  category DailyCopyCategory
  content  String @db.Text

  // extensible metadata for future fields to avoid schema churn
  metadata Json? @db.JsonB

  expiresAt DateTime @map("expires_at")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([tenantId, userId, day])
  @@index([tenantId, day])
  @@index([tenantId, day, category])
  @@map("daily_copies")
}

model ExternalShare {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")

  type      ShareType @map("type")
  targetId  String    @map("target_id")
  status    ShareStatus @default(ACTIVE) @map("status")
  visibility ShareVisibility @default(PUBLIC) @map("visibility")
  
  scopeType ShareScopeType? @map("scope_type")
  scopeId   String?         @map("scope_id")

  publicId  String  @unique @map("public_id")
  tokenHash String? @unique @map("token_hash")
  expiresAt DateTime? @map("expires_at")
  passwordHash String? @map("password_hash")
  extraData Json? @db.JsonB @map("extra_data")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  snapshots ShareSnapshot[]
  accessLogs ShareAccessLog[]
  commentGuestProfiles CommentGuestProfile[]

  @@index([tenantId])
  @@index([tenantId, type])
  @@index([tenantId, targetId])
  @@index([tenantId, scopeType, scopeId])
  @@map("external_shares")
}

model ShareSnapshot {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  shareId  String @map("share_id")

  payload  Json   @db.JsonB

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  share ExternalShare @relation(fields: [shareId], references: [id], onDelete: Cascade)

  @@index([tenantId, shareId])
  @@map("share_snapshots")
}

model ShareAccessLog {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  shareId  String @map("share_id")

  ip        String?
  userAgent String? @map("user_agent")
  accessedAt DateTime @default(now()) @map("accessed_at")
  extraData  Json? @db.JsonB @map("extra_data")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  share ExternalShare @relation(fields: [shareId], references: [id], onDelete: Cascade)

  @@index([tenantId, shareId, accessedAt])
  @@map("share_access_logs")
}

model CommentThread {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  spaceId  String @map("space_id")
  pageId   String @map("page_id")
  shareId  String? @map("share_id")

  source      CommentSource
  status      CommentThreadStatus @default(OPEN)
  quoteText   String? @map("quote_text") @db.Text
  anchorType  String? @map("anchor_type")
  anchorPayload Json? @map("anchor_payload") @db.JsonB

  messageCount     Int      @default(0) @map("message_count")
  participantCount Int      @default(0) @map("participant_count")
  lastMessageId    String?  @map("last_message_id")
  lastMessageAt    DateTime? @map("last_message_at")
  lastActorType    CommentAuthorType? @map("last_actor_type")
  lastActorUserId  String?  @map("last_actor_user_id")
  lastActorGuestId String?  @map("last_actor_guest_id")
  resolvedAt       DateTime? @map("resolved_at")
  resolvedBy       String? @map("resolved_by")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  messages CommentMessage[]

  @@index([tenantId, pageId, isDeleted, status, lastMessageAt, id], map: "comment_threads_tenant_page_status_last_idx")
  @@index([tenantId, pageId, source, isDeleted, lastMessageAt, id], map: "comment_threads_tenant_page_source_last_idx")
  @@index([tenantId, shareId, isDeleted, lastMessageAt, id], map: "comment_threads_tenant_share_last_idx")
  @@map("comment_threads")
}

model CommentMessage {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  threadId String @map("thread_id")
  parentId String? @map("parent_id")
  replyToMessageId String? @map("reply_to_message_id")

  authorType    CommentAuthorType @map("author_type")
  authorUserId  String? @map("author_user_id")
  authorGuestId String? @map("author_guest_id")
  authorGuestNickname String? @map("author_guest_nickname")

  content     Json   @db.JsonB
  contentText String @map("content_text") @db.Text

  moderationStatus CommentModerationStatus @default(PASS) @map("moderation_status")
  riskCategories Json? @map("risk_categories") @db.JsonB
  riskScore Int? @map("risk_score")
  isVisible Boolean @default(true) @map("is_visible")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  thread CommentThread @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([tenantId, threadId, isDeleted, createdAt, id], map: "comment_messages_tenant_thread_created_idx")
  @@index([tenantId, threadId, isVisible, createdAt, id], map: "comment_messages_tenant_thread_visible_created_idx")
  @@index([tenantId, moderationStatus, createdAt], map: "comment_messages_tenant_moderation_created_idx")
  @@index([tenantId, authorUserId, createdAt], map: "comment_messages_tenant_author_user_created_idx")
  @@index([tenantId, authorGuestId, createdAt], map: "comment_messages_tenant_author_guest_created_idx")
  @@map("comment_messages")
}

model CommentGuestProfile {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  shareId  String @map("share_id")
  guestId  String @map("guest_id")

  nickname String @db.VarChar(80)
  email    String? @db.VarChar(320)
  lastSeenAt DateTime @default(now()) @map("last_seen_at")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  share ExternalShare @relation(fields: [shareId], references: [id], onDelete: Cascade)

  @@unique([tenantId, shareId, guestId], map: "comment_guest_profiles_tenant_share_guest_key")
  @@index([tenantId, shareId, lastSeenAt], map: "comment_guest_profiles_tenant_share_last_seen_idx")
  @@index([tenantId, shareId, email], map: "comment_guest_profiles_tenant_share_email_idx")
  @@map("comment_guest_profiles")
}

model CommentModerationLog {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  pageId   String @map("page_id")
  threadId String? @map("thread_id")
  messageId String? @map("message_id")

  actorType    CommentAuthorType? @map("actor_type")
  actorUserId  String? @map("actor_user_id")
  actorGuestId String? @map("actor_guest_id")

  inputTextHash String @map("input_text_hash")
  result       CommentModerationStatus
  hitCategories Json? @map("hit_categories") @db.JsonB
  hitTerms      Json? @map("hit_terms") @db.JsonB
  policyVersion String? @map("policy_version")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([tenantId, pageId, createdAt], map: "comment_mod_logs_tenant_page_created_idx")
  @@index([tenantId, result, createdAt], map: "comment_mod_logs_tenant_result_created_idx")
  @@index([tenantId, actorGuestId, createdAt], map: "comment_mod_logs_tenant_guest_created_idx")
  @@map("comment_moderation_logs")
}

model BillingOrder {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  buyerUserId String @map("buyer_user_id")

  orderNo String @unique @map("order_no")
  idempotencyKey String? @map("idempotency_key")

  status BillingOrderStatus @default(CREATED)
  channel BillingChannel
  clientType BillingClientType @default(WEB_PC)

  currency String @default("CNY")
  amount   Int

  subject     String
  description String?
  lineItems   Json @map("line_items") @db.JsonB
  metadata    Json? @db.JsonB

  paidAt    DateTime? @map("paid_at")
  expiredAt DateTime? @map("expired_at")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  payments BillingPayment[]
  bill     BillingBill?
  subscriptions TenantSubscription[]

  @@index([tenantId, buyerUserId], map: "billing_orders_tenant_buyer_idx")
  @@index([tenantId, status, createdAt], map: "billing_orders_tenant_status_created_idx")
  @@index([tenantId, idempotencyKey], map: "billing_orders_tenant_idempotency_idx")
  @@map("billing_orders")
}

model BillingPayment {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  orderId  String @map("order_id")

  channel    BillingChannel
  clientType BillingClientType @default(WEB_PC)
  status     BillingPaymentStatus @default(INITIATED)

  outTradeNo      String  @map("out_trade_no")
  providerTradeNo String? @map("provider_trade_no")

  requestPayload  Json? @map("request_payload") @db.JsonB
  responsePayload Json? @map("response_payload") @db.JsonB

  paidAt   DateTime? @map("paid_at")
  closedAt DateTime? @map("closed_at")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  order BillingOrder @relation(fields: [orderId], references: [id], onDelete: Cascade)
  bill  BillingBill?

  @@index([tenantId, orderId], map: "billing_payments_tenant_order_idx")
  @@index([tenantId, status, createdAt], map: "billing_payments_tenant_status_created_idx")
  @@unique([channel, outTradeNo], map: "billing_payments_channel_out_trade_no_key")
  @@unique([channel, providerTradeNo], map: "billing_payments_channel_provider_trade_no_key")
  @@map("billing_payments")
}

model BillingWebhookEvent {
  id       String @id @default(cuid())
  tenantId String? @map("tenant_id")

  channel BillingChannel
  eventId String @map("event_id")

  outTradeNo      String? @map("out_trade_no")
  providerTradeNo String? @map("provider_trade_no")

  verifyStatus BillingWebhookVerifyStatus @map("verify_status")
  rawBody      String @map("raw_body") @db.Text
  headers      Json   @db.JsonB
  receivedAt   DateTime @map("received_at")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([channel, eventId], map: "billing_webhooks_channel_event_id_key")
  @@index([tenantId, receivedAt], map: "billing_webhooks_tenant_received_idx")
  @@index([channel, outTradeNo], map: "billing_webhooks_channel_out_trade_idx")
  @@index([channel, providerTradeNo], map: "billing_webhooks_channel_provider_trade_idx")
  @@map("billing_webhook_events")
}

model BillingBill {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  orderId  String @unique @map("order_id")
  paymentId String @unique @map("payment_id")

  billNo String @unique @map("bill_no")
  status BillingBillStatus @default(ISSUED)

  currency   String @default("CNY")
  amountPaid Int @map("amount_paid")
  issuedAt   DateTime @map("issued_at")

  lineItemsSnapshot Json @map("line_items_snapshot") @db.JsonB
  buyerSnapshot     Json? @map("buyer_snapshot") @db.JsonB
  metadata          Json? @db.JsonB

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  order   BillingOrder   @relation(fields: [orderId], references: [id], onDelete: Restrict)
  payment BillingPayment @relation(fields: [paymentId], references: [id], onDelete: Restrict)

  @@index([tenantId, issuedAt], map: "billing_bills_tenant_issued_idx")
  @@map("billing_bills")
}

model TenantSubscription {
  id String @id @default(cuid())
  tenantId String @unique @map("tenant_id")

  status TenantSubscriptionStatus @default(ACTIVE)
  currentPeriodStartAt DateTime @map("current_period_start_at")
  currentPeriodEndAt   DateTime @map("current_period_end_at")
  autoRenew            Boolean  @default(false) @map("auto_renew")

  sourceOrderId String? @map("source_order_id")
  planSnapshot  Json @map("plan_snapshot") @db.JsonB

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  sourceOrder BillingOrder? @relation(fields: [sourceOrderId], references: [id], onDelete: SetNull)

  @@index([tenantId, status, currentPeriodEndAt], map: "tenant_subscriptions_tenant_status_end_idx")
  @@map("tenant_subscriptions")
}

model TenantEntitlement {
  id String @id @default(cuid())
  tenantId String @map("tenant_id")

  key   String
  value Json @db.JsonB

  effectiveFrom DateTime @map("effective_from")
  effectiveTo   DateTime? @map("effective_to")

  sourceType  EntitlementSourceType @map("source_type")
  sourceRefId String @map("source_ref_id")
  reason      String?

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([tenantId, key, effectiveFrom, effectiveTo], map: "tenant_entitlements_tenant_key_effective_idx")
  @@index([tenantId, sourceType, sourceRefId], map: "tenant_entitlements_tenant_source_idx")
  @@map("tenant_entitlements")
}

model VerificationCode {
  id       String @id @default(cuid())

  channel   String
  recipient String
  code      String
  type      String
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false)

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([channel, recipient, type, used])
  @@index([expiresAt])
  @@map("verification_codes")
}

model User {
  id String @id @default(cuid())

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  profile     UserProfile?
  identities  UserIdentity[]
  memberships TenantMembership[]
  sessions    AuthSession[]
  spaceMembers SpaceMember[]
  favorites Favorite[]

  @@index([id])
  @@map("users")
}

model UserProfile {
  id     String @id @default(cuid())
  userId String @unique @map("user_id")

  nickname  String? @map("nickname")
  nicknamePinyin     String? @map("nickname_pinyin")
  nicknamePinyinAbbr String? @map("nickname_pinyin_abbr")
  avatarUrl String? @map("avatar_url")
  bio       String? @map("bio")
  phone     String? @map("phone")

  createdBy String @map("created_by")
