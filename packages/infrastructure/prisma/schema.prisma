generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PageVersionStatus {
  DRAFT
  TEMP
  PUBLISHED
}

enum TaskStatus {
  PENDING
  RUNNING
  SUCCEEDED
  FAILED
  CANCELLED
}

enum TaskType {
  IMPORT
  EXPORT
  RAG_INDEX
}

enum TenantType {
  PERSONAL
  ORG
}

enum TenantRole {
  OWNER
  ADMIN
  MEMBER
}

enum SpaceType {
  PERSONAL
  ORG
}

enum SpaceMemberRole {
  OWNER
  ADMIN
  MEMBER
}

enum AiMessageRole {
  SYSTEM
  USER
  ASSISTANT
}

model RagChunk {
  id       String @id
  tenantId String @map("tenant_id")

  pageId        String @map("page_id")
  pageVersionId String? @map("page_version_id")

  chunkIndex Int    @map("chunk_index")
  content    String
  embedding  Unsupported("vector(2560)")
  metadata   Json?  @db.JsonB

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([tenantId])
  @@index([tenantId, pageId])
  @@index([tenantId, pageVersionId])
  @@map("rag_chunks")
}

model Page {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  spaceId  String @map("space_id")

  title   String
  content Json   @db.JsonB

  parentIds String[] @default([]) @map("parent_ids")

  latestPublishedVersionId String? @unique @map("latest_published_version_id")
  latestPublishedVersion   PageVersion? @relation("LatestPublishedVersion", fields: [latestPublishedVersionId], references: [id], onDelete: SetNull)

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  versions PageVersion[] @relation("PageVersions")

  @@index([id])
  @@index([tenantId, spaceId])
  @@map("pages")
}

model PageVersion {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  spaceId  String @map("space_id")
  pageId   String @map("page_id")

  status PageVersionStatus

  title     String
  content   Json   @db.JsonB
  parentIds String[] @default([]) @map("parent_ids")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  page Page @relation("PageVersions", fields: [pageId], references: [id], onDelete: Cascade)

  /// 反向关联：被 Page.latestPublishedVersion 指向的版本
  latestPublishedFor Page? @relation("LatestPublishedVersion")

  @@index([id])
  @@index([tenantId, spaceId])
  @@index([pageId])
  @@index([pageId, createdAt])
  @@index([pageId, status])
  @@map("page_versions")
}

model Task {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")

  type   TaskType
  status TaskStatus @default(PENDING)

  progress Int @default(0)
  message  String?

  payload Json? @db.JsonB
  result  Json? @db.JsonB
  error   String?

  cancelRequestedAt DateTime? @map("cancel_requested_at")
  startedAt         DateTime? @map("started_at")
  finishedAt        DateTime? @map("finished_at")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([tenantId])
  @@index([tenantId, type])
  @@index([tenantId, status])
  @@map("tasks")
}

model VerificationCode {
  id       String @id @default(cuid())

  channel   String
  recipient String
  code      String
  type      String
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false)

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([channel, recipient, type, used])
  @@index([expiresAt])
  @@map("verification_codes")
}

model User {
  id String @id @default(cuid())

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  profile     UserProfile?
  identities  UserIdentity[]
  memberships TenantMembership[]
  sessions    AuthSession[]
  spaceMembers SpaceMember[]
  spaceFavorites SpaceFavorite[]

  @@index([id])
  @@map("users")
}

model UserProfile {
  id     String @id @default(cuid())
  userId String @unique @map("user_id")

  nickname  String? @map("nickname")
  nicknamePinyin     String? @map("nickname_pinyin")
  nicknamePinyinAbbr String? @map("nickname_pinyin_abbr")
  avatarUrl String? @map("avatar_url")
  bio       String? @map("bio")
  phone     String? @map("phone")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([nicknamePinyin])
  @@index([nicknamePinyinAbbr])
  @@index([phone])
  @@map("user_profiles")
}

model UserIdentity {
  id     String @id @default(cuid())
  userId String @map("user_id")

  provider   String
  identifier String
  secretHash String? @map("secret_hash")
  isVerified Boolean  @default(false) @map("is_verified")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, identifier])
  @@index([userId])
  @@map("user_identities")
}

model Tenant {
  id String @id @default(cuid())

  type TenantType
  key  String? @unique
  name String

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  memberships TenantMembership[]
  sessions    AuthSession[]
  spaces      Space[]

  @@index([type])
  @@map("tenants")
}

model TenantMembership {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")
  userId   String @map("user_id")

  role TenantRole

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@index([userId])
  @@index([tenantId])
  @@map("tenant_memberships")
}

model Space {
  id         String   @id @default(cuid())
  tenantId   String   @map("tenant_id")

  name        String
  description String? @db.Text
  icon        String? 
  color       String?
  identifier  String?  @map("identifier")
  type        SpaceType @default(ORG)
  isArchived  Boolean  @default(false) @map("is_archived")

  // extensible metadata for future fields to avoid schema churn
  metadata    Json?    @db.JsonB

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  members SpaceMember[]
  favorites SpaceFavorite[]

  @@index([tenantId])
  @@index([tenantId, identifier])
  @@index([tenantId, name])
  @@map("spaces")
}

model SpaceMember {
  id       String @id @default(cuid())
  spaceId  String @map("space_id")
  userId   String @map("user_id")

  role     SpaceMemberRole @default(MEMBER)

  // optional per-member permissions
  permissions Json? @db.JsonB

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  space Space @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([spaceId, userId])
  @@index([userId])
  @@index([spaceId])
  @@map("space_members")
}

model SpaceFavorite {
  id      String @id @default(cuid())
  spaceId String @map("space_id")
  userId  String @map("user_id")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  space Space @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
 

  @@unique([spaceId, userId])
  @@index([userId])
  @@index([spaceId])
  @@map("space_favorites")
}

model AuthSession {
  id String @id @default(cuid())

  userId   String @map("user_id")
  tenantId String @map("tenant_id")

  tokenHash String @unique @map("token_hash")
  expiresAt DateTime @map("expires_at")
  revokedAt DateTime? @map("revoked_at")

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tenantId])
  @@index([expiresAt])
  @@map("auth_sessions")
}

model AiConversation {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")

  title String

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  messages AiMessage[]

  @@index([tenantId])
  @@index([tenantId, updatedAt])
  @@map("ai_conversations")
}

model AiMessage {
  id       String @id @default(cuid())
  tenantId String @map("tenant_id")

  conversationId String @map("conversation_id")

  role    AiMessageRole
  content String
  model   String?

  createdBy String @map("created_by")
  updatedBy String @map("updated_by")

  isDeleted Boolean  @default(false) @map("is_deleted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  conversation AiConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, conversationId, createdAt])
  @@map("ai_messages")
}
