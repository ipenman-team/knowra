{
  "name": "contexta",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install:all": "pnpm -r install",
    "build:packages": "pnpm -r --filter \"./packages/**\" run build",
    "lint": "pnpm lint:api && pnpm lint:web",
    "lint:api": "eslint apps/api packages",
    "lint:contexta-ai": "eslint apps/contexta-ai packages",
    "lint:web": "pnpm -F @contexta/web lint",
    "format": "prettier -w .",
    "dev": "pnpm dev:web & pnpm dev:api & pnpm dev:contexta-ai",
    "typecheck": "tsc -b && pnpm -F @contexta/web typecheck",
    "dev:web": "pnpm -F @contexta/web dev",
    "build:web": "pnpm -F @contexta/web build",
    "start:web": "pnpm -F @contexta/web start",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "prisma:generate": "pnpm -F @contexta/infrastructure prisma:generate:local",
    "prisma:migrate": "pnpm -F @contexta/infrastructure prisma:migrate:local",
    "dev:api": "pnpm -F @contexta/api start:dev",
    "dev:contexta-ai": "pnpm -F @contexta/contexta-ai start:dev",
    "build": "pnpm -F @contexta/api build",
    "start": "pnpm -F @contexta/api start:prod",
    "build:contexta-ai": "pnpm -F @contexta/contexta-ai build",
    "start:contexta-ai": "pnpm -F @contexta/contexta-ai start:prod"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.5",
    "dotenv": "^17.2.3",
    "eslint": "^9.17.0",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "dependencies": {
    "@types/lodash": "^4.17.23",
    "cos-nodejs-sdk-v5": "^2.15.4",
    "lodash": "^4.17.23"
  }
}
