{
  "name": "knowra",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "install:all": "pnpm -r install",
    "build:packages": "pnpm -r --filter \"./packages/**\" run build",
    "lint": "pnpm lint:api && pnpm lint:web",
    "lint:api": "eslint apps/api packages",
    "lint:knowra-ai": "eslint apps/knowra-ai packages",
    "lint:web": "pnpm -F @knowra/web lint",
    "format": "prettier -w .",
    "dev": "pnpm dev:web & pnpm dev:api & pnpm dev:knowra-ai",
    "typecheck": "tsc -b && pnpm -F @knowra/web typecheck",
    "dev:web": "pnpm -F @knowra/web dev",
    "build:web": "pnpm -F @knowra/web build",
    "start:web": "pnpm -F @knowra/web start",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "prisma:generate": "pnpm -F @knowra/infrastructure prisma:generate:local",
    "prisma:migrate": "pnpm -F @knowra/infrastructure prisma:migrate:local",
    "dev:api": "pnpm -F @knowra/api start:dev",
    "dev:knowra-ai": "pnpm -F @knowra/knowra-ai start:dev",
    "build": "pnpm -F @knowra/api build",
    "start": "pnpm -F @knowra/api start:prod",
    "build:knowra-ai": "pnpm -F @knowra/knowra-ai build",
    "start:knowra-ai": "pnpm -F @knowra/knowra-ai start:prod"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.5",
    "dotenv": "^17.2.3",
    "eslint": "^9.17.0",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "dependencies": {
    "@types/lodash": "^4.17.23",
    "cos-nodejs-sdk-v5": "^2.15.4",
    "lodash": "^4.17.23"
  }
}
