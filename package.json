{
  "name": "contexta",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "pnpm lint:api && pnpm lint:web",
    "lint:api": "eslint apps/api packages",
    "lint:web": "pnpm -F @contexta/web lint",
    "format": "prettier -w .",
    "dev": "pnpm dev:web & pnpm dev:api",
    "typecheck": "tsc -b && pnpm -F @contexta/web typecheck",
    "dev:web": "pnpm -F @contexta/web dev",
    "build:web": "pnpm -F @contexta/web build",
    "start:web": "pnpm -F @contexta/web start",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "prisma:generate": "pnpm -F @contexta/infrastructure prisma:generate:local",
    "prisma:migrate": "pnpm -F @contexta/infrastructure prisma:migrate:local",
    "dev:api": "pnpm -F @contexta/api start:dev",
    "build": "pnpm -F @contexta/api build",
    "start": "pnpm -F @contexta/api start:prod"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.20.0",
    "typescript": "^5.7.3"
  }
}
